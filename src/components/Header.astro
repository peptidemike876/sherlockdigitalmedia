---
const { pathname } = Astro.url;
---

<header>
  <nav>
    <a class="logo" href="/">
  <img src="/images/logo.svg" alt="Sherlock Digital Media" />
</a>

    <div class="links">
      <a href="/" class={pathname === '/' ? 'active' : ''}>Home</a>
      <a href="/work" class={pathname.startsWith('/work') ? 'active' : ''}>Work</a>
      <a href="/about" class={pathname === '/about' ? 'active' : ''}>About</a>
      <a href="/contact" class={pathname === '/contact' ? 'active' : ''}>Contact</a>
    </div>
  </nav>
</header>

<style>
header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  padding: 1.25rem 0;
  background: transparent;

  z-index: 20;
  color: #ffffff;
}


header a:hover {
  opacity: 0.85;
}
nav {
  max-width: var(--max-width);
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  font-weight: 700;
}

.logo img {
  height: 150px;
  width: auto;
  display: block;
}

.links a {
  margin-left: 2rem;
  color: var(--muted);
  position: relative;
}

.links a.active,
.links a:hover {
  color: var(--text);
}

.links a.active::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 100%;
  height: 2px;
  background: var(--accent);
}
</style>
