---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>

  <!-- HERO -->
  <section class="hero hero-contact">
    <div class="hero-content">
      <h1>Contact</h1>
      <p>
        If you’re interested in collaborating or have a project in mind,
        I’d love to hear from you.
      </p>
    </div>
  </section>

  <main>

    <!-- CONTACT CONTENT -->
    <section class="section section-tight">
      <div class="section-inner contact">
        <div class="contact-text">
          <h2>Let’s talk</h2>
          <p>
            Whether you’re developing a broadcast package, live event visuals,
            or large-scale screen content, feel free to reach out.
          </p>

          <p class="contact-email">
            <a href="mailto:michael@sherlockdigitalmedia.com">
              michael@sherlockdigitalmedia.com
            </a>
          </p>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>
