---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<BaseLayout>
  <section class="intro">
    <h1>Selected Work</h1>
    <p>
      A focused selection of motion and digital projects,
      built to communicate clearly and perform beautifully.
    </p>
  </section>

  <section class="projects">
    <ProjectCard
      title="Project One"
      description="Motion design · Brand systems"
      image="/images/project-1.jpg"
      link="/work/project-one"
    />
    <ProjectCard
      title="Project Two"
      description="Explainer video · Animation"
      image="/images/project-2.jpg"
      link="/work/project-two"
    />
    <ProjectCard
      title="Project Three"
      description="Digital media · Visual storytelling"
      image="/images/project-3.jpg"
      link="/work/project-three"
    />
  </section>
</BaseLayout>

<style>
.intro {
  max-width: 700px;
  margin-bottom: var(--space-xl);
}

.projects {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-xl);
}
</style>
